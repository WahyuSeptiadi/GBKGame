<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#2196F3"
    android:padding="10dp"
    tools:context=".FragmentGame">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:background="#FFC107"
        android:textSize="30dp"
        android:padding="9dp"
        android:text="SCORE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="97dp"
            android:text="HUMAN"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreHuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="135dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/scoreCpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="52dp"
        android:paddingLeft="20dp"
        android:paddingBottom="52dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/tread1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/paper"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="33dp"
            android:textColor="#000"
            android:textSize="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="33dp"
            android:text="vs"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tread2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/paper"
            android:textColor="#000"
            android:textSize="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:background="#00BCD4"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnStart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/play"
            android:layout_marginRight="30dp"
            android:onClick="startThread"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/stop"
            android:onClick="stopThread" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/restart"
            android:onClick="reset" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFC107"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Created by Wahyu Septiadi"/>
    </LinearLayout>
</LinearLayout>